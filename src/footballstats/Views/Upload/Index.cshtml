@{
    ViewData["Title"] = "Upload Page";
}

<div class="jumbotron">
    <h1>Football statistics</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Upload JSON file with football statistics</h2>
        <form method="post" asp-action="Index" asp-controller="Upload" enctype="multipart/form-data">
            <input type="file" name="files" multiple />
            <input type="submit" value="Upload" />
        </form>
    </div>
</div>

<form method="post" enctype="multipart/form-data"
      asp-controller="Upload" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
